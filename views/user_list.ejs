<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Users</h1>
<ol>
    <% results.forEach(function(user) {%>
        <li>
            <p>
                <b><%= user.name %></b>
                (<%= user.username %>)
                <a href="/users/<%= user.id %>">
                    <img src ="<%= user.profileImageUrl %>" alt = "<%= user.name %>" width="25" height="25">
                </a>
                <br>
                Email: <%= user.email %>
            </p>
        </li>
    <% }); %>
</ol>
<%if (next) { %>
    <a href="<%= next %>">Next</a>
<% } %>
<%if (previous) { %>
    <a href="<%= previous %>">Previous</a>
<% } %>
</body>
<%- include('_footer') -%>
</html>